<form action="/todos/{{todo._id}}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" name="isDone" {{#if todo.isDone}} checked {{/if}}>
    </div>
    <input class="form-control" type="text" name="name" value="{{todo.name}}">
    <div class="input-group-append">
      <button class="btn btn-success" type="submit">Save</button>
      <a class="btn btn-danger" href="/todos/{{todo._id}}">Back</a>
    </div>
  </div>

</form>



