<div>
  <input type="checkbox" name="isDone" {{#if todo.isDone}}checked{{/if}} disabled>
  <p>{{todo.name}}</p>
  <a href="/todos/{{todo._id}}">edit</a>
  <a href="/">back</a>
  <form action="/todos/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
    <button type="submit">delete</button>
  </form>
</div>